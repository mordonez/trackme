name = "trackme"
main = "src/index.js"
compatibility_date = "2024-01-01"

# Static assets configuration
# Serve static files from the public directory
[assets]
directory = "public"
binding = "ASSETS"

# Variables de entorno para autenticación
# IMPORTANTE: Las variables sensibles deben configurarse en:
# - Desarrollo local: archivo .dev.vars (no incluido en git)
# - Producción: wrangler secret put TRACKME_USER / wrangler secret put TRACKME_PASSWORD
[vars]
# TRACKME_USER y TRACKME_PASSWORD se configuran mediante secrets

# Base de datos D1
[[d1_databases]]
binding = "DB"
database_name = "trackme-db"
database_id = "YOUR_DATABASE_ID"  # Se generará al crear la DB con: wrangler d1 create trackme-db
